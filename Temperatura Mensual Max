#4.1: SUBIENDO PACK

setwd("D:/LEER_PISCO") #Pones la direccion de la carpeta"
install.packages("raster")
install.packages("ncdf4")
install.packages("rgdal")
library(sp)
library(raster)
library(ncdf4)

#4.2: #Hallando la temp mensual max Enero 1981-Dic 2016

Pisco.temp.mmax<-brick("PISCOtmmax.nc") #No olvides poner el nombre(PISCOtmmax) y la extension(.nc) de PISCO
library(rgdal)
cuenca<-readOGR(dsn=".",layer = "RamisCuencaWGS")
plot(cuenca)
tem.max.cuenca.m<-extract(Pisco.temp.mmax, cuenca, fun=mean)
range(tem.max.cuenca.m) #Brinda la PP minima y maxima
plot(tem.max.cuenca.m[1,], type = "l", col="blue", ylim=c(12,19), ylab="Temperatura (°c)", xlab="Dias", main= "Temperatura Máxima Mensual de la Cuenca Ramis")
write.csv(t(tem.max.cuenca.m), 'Tmmax_CRamis.csv')

